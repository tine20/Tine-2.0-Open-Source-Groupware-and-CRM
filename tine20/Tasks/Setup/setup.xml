<?xml version="1.0" encoding="utf-8"?>
<application>
    <name>Tasks</name>
    <version>12.5</version>
    <order>30</order>
    <depends>
        <application>Admin</application>
    </depends>
    <tables>
        <table>
            <name>tasks</name>
            <version>11</version>
            <declaration>
                <field>
                    <name>id</name>
                    <type>text</type>
                    <length>40</length>
                    <notnull>true</notnull>
                </field>
                <field>
                    <name>container_id</name>
                    <type>text</type>
                    <length>40</length>
                    <notnull>false</notnull>
                </field>
                <field>
                    <name>created_by</name>
                    <type>text</type>
                    <length>40</length>
                </field>
                <field>
                    <name>creation_time</name>
                    <type>datetime</type>
                </field>
                <field>
                    <name>last_modified_by</name>
                    <type>text</type>
                    <length>40</length>
                </field>
                <field>
                    <name>last_modified_time</name>
                    <type>datetime</type>
                </field>
                <field>
                    <name>is_deleted</name>
                    <type>boolean</type>
                    <default>false</default>
                </field>
                <field>
                    <name>deleted_by</name>
                    <type>text</type>
                    <length>40</length>
                </field>
                <field>
                    <name>deleted_time</name>
                    <type>datetime</type>
                </field>
                <field>
                    <name>seq</name>
                    <type>integer</type>
                    <notnull>true</notnull>
                    <default>0</default>
                </field>
                <field>
                    <name>percent</name>
                    <type>integer</type>
                    <length>4</length>
                </field>
                <field>
                    <name>completed</name>
                    <type>datetime</type>
                </field>
                <field>
                    <name>due</name>
                    <type>datetime</type>
                </field>
                <field>
                    <name>class</name>
                    <type>text</type>
                    <length>40</length>
                    <default>PUBLIC</default>
                    <notnull>true</notnull>
                </field>
                <field>
                    <name>description</name>
                    <type>clob</type>
                </field>
                <field>
                    <name>geo</name>
                    <type>float</type>
                </field>
                <field>
                    <name>location</name>
                    <type>text</type>
                    <length>255</length>
                    <notnull>false</notnull>
                </field>
                    <field>
                    <name>organizer</name>
                    <type>text</type>
                    <length>40</length>
                </field>
                <field>
                    <name>originator_tz</name>
                    <type>text</type>
                    <length>255</length>
                </field>
                <field>
                    <name>priority</name>
                    <type>text</type>
                    <length>40</length>
                    <default>200</default>
                    <notnull>true</notnull>
                </field>
                <field>
                    <name>status</name>
                    <type>text</type>
                    <length>40</length>
                    <default>NEEDS-ACTION</default>
                    <notnull>true</notnull>
                </field>
                <field>
                    <name>summary</name>
                    <type>text</type>
                    <length>255</length>
                    <notnull>false</notnull>
                </field>
                <field>
                    <name>url</name>
                    <type>text</type>
                    <length>255</length>
                    <notnull>false</notnull>
                </field>
                <field>
                    <name>uid</name>
                    <type>text</type>
                    <length>255</length>
                    <notnull>true</notnull>
                </field>
                <field>
                    <name>etag</name>
                    <type>text</type>
                    <length>60</length>
                </field>
                <index>
                    <name>id</name>
                    <primary>true</primary>
                    <field>
                        <name>id</name>
                    </field>
                </index>
                <index>
                    <name>container_id</name>
                    <field>
                        <name>container_id</name>
                    </field>
                </index>
                <index>
                    <name>organizer</name>
                    <field>
                        <name>organizer</name>
                    </field>
                </index>
                <index>
                    <name>class</name>
                    <field>
                        <name>class</name>
                    </field>
                </index>
                <index>
                    <name>uid--id</name>
                    <field>
                        <name>uid</name>
                    </field>
                    <field>
                        <name>id</name>
                    </field>
                </index>
                <index>
                    <name>description</name>
                    <fulltext>true</fulltext>
                    <field>
                        <name>description</name>
                    </field>
                </index>
                <index>
                    <name>etag</name>
                    <field>
                        <name>etag</name>
                    </field>
                </index>
            </declaration>
        </table>
        
        <table>
            <name>tasks_contact</name>
            <version>1</version>
            <declaration>
                <field>
                    <name>task_id</name>
                    <type>text</type>
                    <length>40</length>
                    <notnull>true</notnull>
                </field>            
                <field>
                    <name>contact_id</name>
                    <type>integer</type>
                    <notnull>true</notnull>
                </field>
                <index>
                    <name>task_id-contact_id</name>
                    <primary>true</primary>
                    <field>
                        <name>task_id</name>
                    </field>
                    <field>
                        <name>contact_id</name>
                    </field>
                </index>
               <index>
                    <name>task_contact::task_id--tasks::id</name>
                    <foreign>true</foreign>
                    <field>
                        <name>task_id</name>
                    </field>
                    <reference>
                        <table>tasks</table>
                        <field>id</field>
                        <ondelete>CASCADE</ondelete>
                        <!-- add onupdate? -->
                    </reference>
                </index>   
            </declaration>
        </table>
            
    </tables>
</application>  